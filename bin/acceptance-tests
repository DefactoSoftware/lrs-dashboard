#!/bin/sh
set -e

cd "$(dirname "$0")/.."

CONFIG="config/wdio/local.js"
DEBUG=false

while [ "$1" != "" ]; do
    case $1 in
        -c | --config )       shift
                              CONFIG=$1
                              ;;
        -s | --spec )         shift
                              SPEC="--spec $1"
                              ;;
        -d | --debug )        DEBUG=true
                              ;;
        * )                   exit 1
    esac
    shift
done

DEBUG=$DEBUG APPLICATION_URL="http://localhost:8080" ./node_modules/.bin/wdio $CONFIG $SPEC
